{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended",
        "tslint-microsoft-contrib"
    ],
    "jsRules": {},
    "rules": {
        "quotemark": [true, "single"],
        "class-name": true,
        "variable-name": true,
        "only-arrow-functions": true,
        "no-console": false,
        "trailing-comma": false,
        "await-promise": true,
        "promise-function-async": true,
        "triple-equals": true
    },
    "rulesDirectory": ["node_modules/tslint-microsoft-contrib"]
}